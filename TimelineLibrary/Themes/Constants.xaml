<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:s="clr-namespace:System;assembly=mscorlib"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Tooltip resources -->

    <SolidColorBrush
        x:Key="EventTooltipBackground">#FF2D2D2D</SolidColorBrush>

    <SolidColorBrush
        x:Key="EventTooltipTitleForeground">White</SolidColorBrush>
    
    <SolidColorBrush
        x:Key="EventTooltipDescriptionForeground">Silver</SolidColorBrush>
    
    <s:Int32
        x:Key="TooltipTimeout">60</s:Int32>

    <SolidColorBrush
        x:Key="BandEventTitleForeground">White</SolidColorBrush>

    <SolidColorBrush
        x:Key="BandTeaserForeground">Silver</SolidColorBrush>

    <SolidColorBrush
        x:Key="ItemBackground">#FF2F2F2F</SolidColorBrush>

    <SolidColorBrush
        x:Key="ItemForeground">White</SolidColorBrush>

    <SolidColorBrush
        x:Key="ItemLineBrush">#FF444444</SolidColorBrush>

    <SolidColorBrush
        x:Key="BandVisibleWindowBackground">#5B595959</SolidColorBrush>

    <SolidColorBrush
        x:Key="NavigateButtonNormalBackground">#FF444444</SolidColorBrush>

    <SolidColorBrush
        x:Key="NavigateButtonMouseOverBackground">#FFBDBDBD</SolidColorBrush>

    <SolidColorBrush
        x:Key="NavigateButtonBaseBackground">#FF7A7A7A</SolidColorBrush>

    <SolidColorBrush
        x:Key="NavigateButtonBaseStroke">#FFBDBDBD</SolidColorBrush>

</ResourceDictionary>
